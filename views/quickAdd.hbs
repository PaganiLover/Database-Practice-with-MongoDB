  <div class="main-content">
    <h1 class="add-header">Add New Content Quickly With Quick Add!</h1>
    <a href="http://localhost:3000/customers"><div class="back-to-original">
      <p class="back-p">Back</p>
    </div></a>

    <h1 class="add-header">Add A New Customer</h1>
    <form class="add-form" method="POST" action="/CustomerAddition">
      <div class="btn-opts">
        <button class="save" type="submit">Save</button>
        <a href="http://localhost:3000/customers"><div class="cancel-btn">
          <p class="cancel">Cancel</p>
        </div></a>
      </div>
      <label for="Fname">First Name</label>
        <input id="Fname" type="text" placeholder="required" name="Fname"/>
      <label for="Lname">Last Name</label>
        <input id="Lname" type="text" placeholder="required" name="Lname"/>
      <label for="phone">Phone</label>
        <input id="phone" type="text" placeholder="required" name="phone"/>
      <label for="email">Email</label>
        <input id="email" type="email" placeholder="required" name="email"/>
      <button class="save-two" type="submit">Save</button>
    </form>

    <h1 class="add-header">Add A New Event</h1>
    <form class="add-form" method="POST" action="/eventAddition">
      <div class="btn-opts">
        <button class="save" type="submit">Save</button>
        <a href="http://localhost:3000/customers"><div class="cancel-btn">
          <p class="cancel">Cancel</p>
        </div></a>
      </div>
      <label for="Ename">Event Name</label>
      <input id="Ename" type="text" placeholder="required" name="Ename"/>
      <label for="Edate">Event Date</label>
      <input id="Edate" type="date" placeholder="required" name="Edate"/>
      <label for="Etime">Event Time</label>
      <input id="Etime" type="text" placeholder="required" name="Etime"/>
      <label for="Eprice">Event Price</label>
      <input id="Eprice" type="text" placeholder="required" name="Eprice"/>
      <button class="save-two" type="submit">Save</button>
    </form>


    <h1 class="add-header">Add New Inventory</h1>
    <form class="add-form" method="POST" action="/inventoryAddition">
      <div class="btn-opts">
        <button class="save" type="submit">Save</button>
        <a href="http://localhost:3000/customers"><div class="cancel-btn">
          <p class="cancel">Cancel</p>
        </div></a>
      </div>
      <label for="Make">Make</label>
      <input id="Make" type="text" placeholder="required" name="Make"/>
      <label for="Model">Model</label>
      <input id="Model" type="text" placeholder="required" name="Model"/>
      <label for="Year">Year</label>
      <input id="Year" type="text" placeholder="required" name="Year"/>
      <label for="Price">Price</label>
      <input id="Price" type="text" placeholder="required" name="Price"/>
      <button class="save-two" type="submit">Save</button>
    </form>

    <h1 class="add-header">Add A New Location</h1>
    <form class="add-form" method="POST" action="/locationAddition">
      <div class="btn-opts">
        <button class="save" type="submit">Save</button>
        <a href="http://localhost:3000/customers"><div class="cancel-btn">
          <p class="cancel">Cancel</p>
        </div></a>
      </div>
      <label for="State">State</label>
      <input id="State" type="text" placeholder="required" name="State"/>
      <label for="City">City</label>
      <input id="City" type="text" placeholder="required" name="City"/>
      <label for="Zip">Zip code</label>
      <input id="Zip" type="text" placeholder="required" name="Zip"/>
      <label for="Full">Full address</label>
      <input id="Full" type="text" placeholder="required" name="Full"/>
      <button class="save-two" type="submit">Save</button>
    </form>

    <h1 class="add-header">Add A New Salesman</h1>
    <form class="add-form" method="POST" action="/salesmenAddition">
      <div class="btn-opts">
