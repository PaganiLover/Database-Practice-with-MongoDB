<!doctype html>

<link rel="stylesheet" type="text/css" href="stylesheets/salesmen.css" />
<html>
<div class="head-bar">
  <a href="http://localhost:3000/"><header class="head-bar-title">Database Viewer 5000</header></a>
  <a href="http://localhost:3000/QuickAdd"><div class="quick-add-btn">
    <p class="add-btn-p">Quick Add</p>
    <img class="add-btn-img" src="/img/down-arrow.png"></img>
  </div></a>
</div>
<div class="content-container">
  <div class="side-barTwo">
    <a href="http://localhost:3000/customers"><div class="customer-opt-block">
      <h1 class="customer-opt">Customer</h1>
    </div></a>
      <a href="http://localhost:3000/inventory"><div class="CarsAvailable-opt-block">
        <h1 class="CarsAvailable-opt">Cars Available</h1>
      </div></a>
        <a href="http://localhost:3000/locations"><div class="DealerLocations-opt-block">
          <h1 class="DealerLocations-opt">Dealer Locations</h1>
        </div></a>
      <a href="http://localhost:3000/salesmen"><div class="Salesmen-opt-block">
        <h1 class="Salesmen-opt">Salesmen on Duty</h1>
      </div></a>
    <a href="http://localhost:3000/events"><div class="Events-opt-block">
      <h1 class="Events-opt">Upcoming Events</h1>
    </div></a>
  </div>

<div class="main-content">
  <h1 class="add-header">Update Your Customer</h1>
  <a href="http://localhost:3000/customers"><div class="back-to-original">
    <p class="back-p">Back</p>
  </div></a>

  <form class="add-form" method="post" action="/salescommit">
    <div class="btn-opts">
      <a href="http://localhost:3000/customers"><div class="cancel-btn">
        <p class="cancel">Cancel</p>
      </div></a>
    </div>
    <label class="hidden-id-form-container" for="identification"></label>
      <input class="hidden-id-form-container" id="identification" type="text" name="identification" value={{items._id}} />
    <label for="Fname">First Name</label>
      <input id="Fname" type="text" value="{{items.Firstname}}" name="Fname"/>
    <label for="Lname">Last Name</label>
      <input id="Lname" type="text" value="{{items.Lastname}}" name="Lname"/>
    <label for="Experience">Experience</label>
      <input id="Experience" type="text" value="{{items.Experience}}" name="Experience"/>
    <label for="email">Email</label>
      <input id="email" type="email" value="{{items.email}}" name="email"/>
    <button class="save-two" type="submit">Save</button>
  </form>
</div>
